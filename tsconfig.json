{
	// ref: https://www.typescriptlang.org/tsconfig/
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": [
		"@tsconfig/bun/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],
	"compilerOptions": {
		"incremental": true
	},
	"include": [
		"${configDir}/**/*",
		// include dot files
		"${configDir}/**/.*",
		"${configDir}/**/.*/**/*"
	],
	"exclude": ["node_modules", "worker"]
}
